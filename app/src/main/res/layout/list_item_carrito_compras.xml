<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#919191"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Productos"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/textView_CarritoProducto"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#919191"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:singleLine="true"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:id="@+id/textView_CarritoCantidad"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#919191"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/textView_CarritoPrecio"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#919191"
            android:orientation="horizontal">

            <Button
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:text="+"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#ff0000"
                android:id="@+id/button_CarritoMas"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#919191"
            android:orientation="horizontal">

            <Button
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="-"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#ff0000"
                android:id="@+id/button_CarritoMenos"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#919191"
            android:orientation="horizontal">

            <Button
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:text="X"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#ff0000"
                android:id="@+id/button_CarritoEliminar"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>